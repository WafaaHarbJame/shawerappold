<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resetPasswordSent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/resetPasswordSentHeader"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/snow"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintHeight_percent="0.75">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_70"
            android:src="@mipmap/icon_validate_email"/>

        <TextView
            android:id="@+id/emailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_50"
            android:fontFamily="@font/tajawal_extrabold"
            android:gravity="center"
            android:paddingEnd="@dimen/size_20"
            android:paddingStart="@dimen/size_20"
            android:textColor="@color/eerieBlack"
            android:textSize="@dimen/text_size_30"
            tools:text="test_email@gmail.com"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tajawal_extrabold"
            android:gravity="center"
            android:text="@string/reset_password_message1"
            android:textColor="@color/eerieBlack"
            android:textSize="@dimen/text_size_20"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tajawal_light"
            android:gravity="center"
            android:text="@string/reset_password_message2"
            android:textColor="@color/eerieBlack"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resetPasswordSentHeader">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/size_10"
            android:background="@drawable/ripple_gold_gradient"
            android:fontFamily="@font/tajawal_medium"
            android:gravity="center_horizontal|bottom"
            android:includeFontPadding="false"
            android:text="@string/login_caps"
            android:textColor="@color/gold_button_text_color"
            android:textSize="@dimen/text_size_30"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>