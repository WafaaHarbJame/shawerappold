<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/privateLawyerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snow">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/snow">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed|exitUntilCollapsed">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profileHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/yankeesBlue"
                    app:layout_collapseMode="parallax">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iconImageView"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/gold_gradient_circle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@mipmap/icon_profile_default"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/onlineIndicatorImageView"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:visibility="invisible"
                        android:src="@drawable/icon_status_online"
                        app:layout_constraintBottom_toBottomOf="@+id/iconImageView"
                        app:layout_constraintEnd_toEndOf="@+id/iconImageView"
                        app:layout_constraintStart_toEndOf="@+id/iconImageView"
                        app:layout_constraintTop_toTopOf="@+id/iconImageView"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:maxLines="1"
                        android:textColor="@color/snow"
                        android:textSize="@dimen/text_size_20"
                        app:fontFamily="@font/tajawal_extrabold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iconImageView"
                        tools:text="Username"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/lawyerFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:maxLines="1"
                        android:textColor="@color/snow"
                        android:textSize="@dimen/text_size_17"
                        app:fontFamily="@font/tajawal_medium"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/username"
                        tools:text="Lawyer Full Name"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/profileBio"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="32dp"
                        android:layout_marginStart="32dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="3"
                        android:textColor="@color/snow"
                        android:textSize="@dimen/text_size_12"
                        app:fontFamily="@font/tajawal_light"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lawyerFullName"
                        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/appCompatTextView"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:drawablePadding="10dp"
                        android:drawableTop="@drawable/icon_questions"
                        android:gravity="center"
                        android:text="@string/label_profile_questions_raised"
                        android:textColor="@color/snowOpaque"
                        android:textSize="@dimen/text_size_10"
                        app:fontFamily="@font/tajawal_light"
                        app:layout_constraintEnd_toStartOf="@+id/appCompatTextView2"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profileBio"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/numOfQuestionsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/tajawal_black"
                        android:gravity="center"
                        android:maxLines="1"
                        android:maxWidth="40dp"
                        android:minWidth="40dp"
                        android:text="0"
                        android:textColor="@color/snow"
                        android:textSize="@dimen/text_size_10"
                        app:layout_constraintEnd_toEndOf="@+id/appCompatTextView"
                        app:layout_constraintStart_toStartOf="@+id/appCompatTextView"
                        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView"
                        tools:text="0.000"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/appCompatTextView2"
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:drawablePadding="10dp"
                        android:drawableTop="@drawable/icon_answers"
                        android:gravity="center"
                        android:text="@string/label_profile_answered"
                        android:textColor="@color/snowOpaque"
                        android:textSize="@dimen/text_size_10"
                        app:fontFamily="@font/tajawal_light"
                        app:layout_constraintEnd_toStartOf="@+id/primaryInstruction"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/appCompatTextView"
                        app:layout_constraintTop_toBottomOf="@+id/profileBio"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/numOfLikesTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/tajawal_black"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="0"
                        android:textColor="@color/snow"
                        android:textSize="@dimen/text_size_10"
                        app:layout_constraintEnd_toEndOf="@+id/primaryInstruction"
                        app:layout_constraintStart_toStartOf="@+id/primaryInstruction"
                        app:layout_constraintTop_toBottomOf="@+id/primaryInstruction"
                        tools:text="0.000"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/numOfAnswersCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/tajawal_black"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="0"
                        android:textColor="@color/snow"
                        android:textSize="@dimen/text_size_10"
                        app:layout_constraintEnd_toEndOf="@+id/appCompatTextView2"
                        app:layout_constraintStart_toStartOf="@+id/appCompatTextView2"
                        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView2"
                        tools:text="0.000"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/appCompatTextView3"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:drawablePadding="10dp"
                        android:drawableTop="@drawable/icon_gem_medium"
                        android:gravity="center"
                        android:text="@string/label_settings_coins_balance"
                        android:textColor="@color/snowOpaque"
                        android:textSize="@dimen/text_size_10"
                        app:fontFamily="@font/tajawal_light"
                        app:layout_constraintEnd_toStartOf="@+id/appCompatTextView4"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/primaryInstruction"
                        app:layout_constraintTop_toBottomOf="@+id/profileBio"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/coinBalanceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/tajawal_black"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="0"
                        android:textColor="@color/snow"
                        android:textSize="@dimen/text_size_10"
                        app:layout_constraintEnd_toEndOf="@+id/appCompatTextView3"
                        app:layout_constraintStart_toStartOf="@+id/appCompatTextView3"
                        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView3"
                        tools:text="0.000"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/appCompatTextView4"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="16dp"
                        android:drawablePadding="10dp"
                        android:drawableTop="@drawable/icon_profile_experience"
                        android:gravity="center"
                        android:text="@string/label_profile_experience"
                        android:textColor="@color/snowOpaque"
                        android:textSize="@dimen/text_size_10"
                        app:fontFamily="@font/tajawal_light"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/appCompatTextView3"
                        app:layout_constraintTop_toBottomOf="@+id/profileBio"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/primaryInstruction"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:drawablePadding="10dp"
                        android:drawableTop="@drawable/icon_profile_likes"
                        android:gravity="center"
                        android:text="@string/label_profile_likes"
                        android:textColor="@color/snowOpaque"
                        android:textSize="@dimen/text_size_10"
                        app:fontFamily="@font/tajawal_light"
                        app:layout_constraintEnd_toStartOf="@+id/appCompatTextView3"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/appCompatTextView2"
                        app:layout_constraintTop_toBottomOf="@+id/profileBio"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/yearsOfExperienceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/tajawal_black"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="--"
                        android:textColor="@color/snow"
                        android:textSize="@dimen/text_size_10"
                        app:layout_constraintEnd_toEndOf="@+id/appCompatTextView4"
                        app:layout_constraintStart_toStartOf="@+id/appCompatTextView4"
                        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView4"
                        tools:text="3-5 Years"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/questionsAssignedList"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toStartOf="@+id/viewPagerRight"
                        app:layout_constraintStart_toEndOf="@+id/viewPagerLeft"
                        app:layout_constraintTop_toBottomOf="@+id/numOfAnswersCount"
                        tools:listitem="@layout/item_pending_tasks"/>

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/viewPagerRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp"
                        android:background="?selectableItemBackgroundBorderless"
                        app:layout_constraintBottom_toBottomOf="@id/questionsAssignedList"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/questionsAssignedList"
                        app:layout_constraintTop_toTopOf="@id/questionsAssignedList"
                        app:srcCompat="@drawable/ic_icon_view_navi_right"/>

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/viewPagerLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="?selectableItemBackgroundBorderless"
                        app:layout_constraintBottom_toBottomOf="@id/questionsAssignedList"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/questionsAssignedList"
                        app:srcCompat="@drawable/ic_icon_view_navi_left"/>

                    <Button
                        android:id="@+id/btnAddNewMemo"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/gold_gradient"
                        android:fontFamily="@font/tajawal_medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingTop="@dimen/size_5"
                        android:text="@string/add_new_memo_caps"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/size_20"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/questionsAssignedList"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/collapsedToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/text_size_10">

                        <ImageView
                            android:id="@+id/profilePictureCollapsed"
                            android:layout_width="@dimen/size_50"
                            android:layout_height="@dimen/size_50"
                            android:layout_marginTop="@dimen/size_5"
                            android:background="@drawable/gold_gradient_circle"
                            android:src="@mipmap/icon_profile_default"/>

                        <TextView
                            android:id="@+id/usernameCollapsed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/size_20"
                            android:fontFamily="@font/tajawal_extrabold"
                            android:textColor="@color/snow"
                            android:textSize="@dimen/text_size_20"
                            tools:text="Test Username"/>
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/snow"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnAddNewMemo"
            tools:listitem="@layout/item_memo"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/memoComposerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size_30"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/memoContentInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/timberwolf"
            android:hint="@string/hint_memo_input"
            android:minHeight="@dimen/size_30"
            android:paddingBottom="@dimen/size_5"
            android:paddingEnd="@dimen/size_15"
            android:paddingStart="@dimen/size_15"
            android:paddingTop="@dimen/size_5"
            android:textColor="@color/eerieBlack"
            android:textColorHint="@color/darkLiver"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintEnd_toStartOf="@+id/btnPost"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btnPost"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/gold_gradient"
            android:fontFamily="@font/tajawal_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/post"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_20"
            app:layout_constraintBottom_toBottomOf="@id/memoContentInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/memoContentInput"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
