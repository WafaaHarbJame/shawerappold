<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/snow"
    >

  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/iconImageView"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/titleTextView"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/icon_gem_tiny"
      />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/titleTextView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:fontFamily="@font/tajawal_extrabold"
      android:textColor="@color/colorPrimary"
      android:textSize="@dimen/text_size_14"
      app:layout_constraintBottom_toTopOf="@+id/descriptionTextView"
      app:layout_constraintEnd_toStartOf="@+id/amountTextView"
      app:layout_constraintStart_toEndOf="@+id/iconImageView"
      app:layout_constraintTop_toTopOf="@+id/iconImageView"
      app:layout_constraintVertical_chainStyle="spread"
      tools:text="Package Name"
      />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/descriptionTextView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="16dp"
      android:fontFamily="@font/tajawal_light"
      android:textColor="@color/blackOpaque30"
      android:textSize="@dimen/text_size_12"
      app:layout_constraintBottom_toBottomOf="@+id/iconImageView"
      app:layout_constraintEnd_toStartOf="@+id/amountTextView"
      app:layout_constraintStart_toEndOf="@+id/iconImageView"
      app:layout_constraintTop_toBottomOf="@+id/titleTextView"
      tools:text="000 Coins"
      />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/amountTextView"
      android:layout_width="80dp"
      android:layout_height="26dp"
      android:layout_marginEnd="8dp"
      android:background="@drawable/gold_gradient"
      android:fontFamily="@font/tajawal_extrabold"
      android:gravity="center"
      android:textColor="@color/dirt"
      android:textSize="@dimen/text_size_16"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="$ 1,000"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="@color/dirt"
      app:layout_constraintBottom_toBottomOf="parent"
      />


</androidx.constraintlayout.widget.ConstraintLayout>