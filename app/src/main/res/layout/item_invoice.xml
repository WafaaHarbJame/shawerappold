<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/snow">

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/requestNumberTxt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:fontFamily="@font/tajawal_extrabold"
      android:textColor="@color/colorPrimary"
      android:textSize="@dimen/text_size_14"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="@string/request_number" />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/requestNumberText"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="8dp"
      android:fontFamily="@font/tajawal_extrabold"
      android:textColor="@color/colorPrimary"
      android:textSize="@dimen/text_size_14"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/requestNumberTxt"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="626321673213" />

  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="@color/dirt"
      app:layout_constraintBottom_toBottomOf="parent"
      />


</androidx.constraintlayout.widget.ConstraintLayout>