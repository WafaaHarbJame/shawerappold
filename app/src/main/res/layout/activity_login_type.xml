<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snow">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/size_50"
        android:layout_marginTop="@dimen/size_100"
        android:src="@drawable/splash_icon"
        app:layout_constraintBottom_toTopOf="@+id/loginMessage1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btnLoginAsLawyer"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tajawal_medium"
        android:text="Login as Lawyer User"
        android:textAllCaps="false"
        android:textColor="#D0021B"
        android:textSize="@dimen/text_size_18"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btnLoginAsCommercial"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tajawal_medium"
        android:text="Login as Commercial User"
        android:textAllCaps="false"
        android:textColor="#D0021B"
        android:textSize="@dimen/text_size_18"
        app:layout_constraintBottom_toTopOf="@id/btnLoginAsLawyer"/>

    <Button
        android:id="@+id/btnLoginAsIndividual"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tajawal_medium"
        android:text="Login as Individual User"
        android:textAllCaps="false"
        android:textColor="#D0021B"
        android:textSize="@dimen/text_size_18"
        app:layout_constraintBottom_toTopOf="@id/btnLoginAsCommercial"/>

    <TextView
        android:id="@+id/loginMessage3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_50"
        android:fontFamily="@font/tajawal_regular"
        android:gravity="center"
        android:text="Happy Consulting!"
        android:textAllCaps="false"
        android:textColor="@color/eerieBlack"
        app:layout_constraintBottom_toTopOf="@id/btnLoginAsIndividual"/>

    <TextView
        android:id="@+id/loginMessage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tajawal_light"
        android:gravity="center"
        android:text="@string/login_message_2"
        android:textAllCaps="false"
        android:textColor="@color/eerieBlack"
        app:layout_constraintBottom_toTopOf="@id/loginMessage3"/>

    <TextView
        android:id="@+id/loginMessage1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tajawal_extrabold"
        android:gravity="center"
        android:text="Your Account is Active"
        android:textAllCaps="false"
        android:textColor="@color/eerieBlack"
        android:textSize="@dimen/text_size_18"
        app:layout_constraintBottom_toTopOf="@id/loginMessage2"/>
</androidx.constraintlayout.widget.ConstraintLayout>