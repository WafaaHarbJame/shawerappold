<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/snow_rounded_rectangle">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fieldName"
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/tajawal_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/dirt"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintBottom_toTopOf="@+id/subSubjectName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Field Name"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/subSubjectName"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/tajawal_extrabold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/dirt"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintBottom_toTopOf="@+id/serviceFee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fieldName"
        tools:text="Sub-subject name"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/serviceFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/size_2"
        android:background="@drawable/gold_gradient"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingBottom="@dimen/size_2"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:paddingTop="@dimen/size_2"
        android:textSize="@dimen/text_size_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subSubjectName"
        tools:text="900"/>
    <!--android:drawableStart="@drawable/icon_gem_tiny"-->

</androidx.constraintlayout.widget.ConstraintLayout>